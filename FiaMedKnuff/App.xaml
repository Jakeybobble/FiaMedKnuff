<Application
    x:Class="FiaMedKnuff.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FiaMedKnuff">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Merge the Standard.xaml theme -->
                <ResourceDictionary Source="Themes/Standard.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Style definitions -->
            <Style x:Key="CommonBorder" TargetType="Border">
                <Setter Property="BorderBrush" Value="{StaticResource Border}"/>
                <Setter Property="BorderThickness" Value="5"/>
                <Setter Property="CornerRadius" Value="5"/>
            </Style>

            <Style x:Key="TileBorder" TargetType="Border">
                <Setter Property="BorderBrush" Value="{StaticResource Border}"/>
                <Setter Property="BorderThickness" Value="5"/>
                <Setter Property="CornerRadius" Value="100"/>
                <Setter Property="Background" Value="{StaticResource StandardTile}"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
